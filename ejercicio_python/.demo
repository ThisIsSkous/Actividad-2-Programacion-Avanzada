class Universidad:
    def __init__(self, nombre, ubicacion, fundacion):
        self.nombre = nombre
        self.ubicacion = ubicacion
        self.fundacion = fundacion

class Carrera:
    def __init__(self, nombre, duracion, universidad):
        self.nombre = nombre
        self.duracion = duracion
        self.universidad = universidad

# Ejemplo de uso
mi_universidad = Universidad("Universidad ABC", "Ciudad XYZ", 1950)
mi_carrera = Carrera("Ingeniería Informática", 5, mi_universidad)

# Acceder a los atributos
print(mi_universidad.nombre)
print(mi_carrera.nombre)
print(mi_carrera.universidad.nombre)
